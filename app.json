{
  "expo": {
    "name": "rex-healthify",
    "slug": "rex-healthify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rexhealthify",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "package": "com.rexhealthify.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Rex Healthify uses the camera to capture health documents.",
        "NSPhotoLibraryUsageDescription": "Save and attach health record images.",
        "NSMicrophoneUsageDescription": "Optional for voice assistant."
      }
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-camera",
        { "cameraPermission": "Allow Rex Healthify to access your camera to capture health documents." }
      ],
      [
        "expo-notifications",
        { "icon": "./assets/images/icon.png", "sounds": [] }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
